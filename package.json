{
  "name": "unified-integration-ecosystem",
  "version": "1.0.0",
  "description": "Complete integration hub connecting GitHub, Docker, HubSpot, Canva, Kubernetes, and all services",
  "main": "automation/orchestrator.js",
  "scripts": {
    "start": "node automation/orchestrator.js",
    "dev": "nodemon automation/orchestrator.js",
    "test": "jest",
    "lint": "eslint .",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "k8s:deploy": "kubectl apply -f kubernetes/",
    "k8s:status": "kubectl get pods -n integration",
    "setup": "npm install && npm run docker:build",
    "health": "curl http://localhost:3000/health",
    "dashboard": "open http://localhost:3000/dashboard"
  },
  "keywords": [
    "integration",
    "docker",
    "kubernetes",
    "github",
    "hubspot",
    "canva",
    "automation",
    "ci-cd",
    "orchestration"
  ],
  "author": "Dan Brown <danbrown20@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "cron": "^3.1.6",
    "sharp": "^0.32.6",
    "canvas": "^2.11.2",
    "puppeteer": "^21.5.0",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "@octokit/rest": "^20.0.2",
    "hubspot-api-client": "^10.2.0",
    "@kubernetes/client-node": "^0.20.0",
    "dockerode": "^4.0.0",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "bull": "^4.12.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "multer": "^1.4.5-lts.1",
    "archiver": "^6.0.1",
    "node-schedule": "^2.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "@types/node": "^20.9.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danbrown20/unified-integration.git"
  },
  "bugs": {
    "url": "https://github.com/danbrown20/unified-integration/issues"
  },
  "homepage": "https://github.com/danbrown20/unified-integration#readme"
}